<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/taskListFragment">

    <fragment
        android:id="@+id/taskFormFragment"
        android:name="com.example.myapplication.tasklist.ui.views.TaskFormFragment"
        android:label="fragment_task_form"
        tools:layout="@layout/fragment_task_form" >
        <action
            android:id="@+id/navigateToTaskListFragment"
            app:destination="@id/taskListFragment" />
    </fragment>
    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.example.myapplication.tasklist.ui.views.TaskListFragment"
        android:label="fragment_task_list"
        tools:layout="@layout/fragment_task_list" >
        <action
            android:id="@+id/navigateToTaskFormFragment"
            app:destination="@id/taskFormFragment" />
        <action
            android:id="@+id/navigateToTaskDetailFragment"
            app:destination="@id/taskDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/taskDetailFragment"
        android:name="com.example.myapplication.tasklist.ui.views.TaskDetailFragment"
        android:label="fragment_task_detail"
        tools:layout="@layout/fragment_task_detail" >
        <action
            android:id="@+id/navigateToTaskListFragment"
            app:destination="@id/taskListFragment" />
    </fragment>
</navigation>